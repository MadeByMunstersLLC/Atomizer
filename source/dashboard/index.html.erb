---
title: Atomizer Dashboard | Red Ventures
topbar: true
---
<header role="header" class="page-header">
  <h2 class="page-header__title margin-bottom--echo">Dashboard</h2>
  <div class="page-header__right">
    <button class="button--alpha modal__trigger" data-modal="createScenario">Create Scenario</button>
  </div>
</header>
<section role="region" aria-label="atomzier-dashboard" class="page-section page-section--header-offset page-section--no-tabs">
  <div class="page-main page-main--full">
    <div class="page-main__content">
      <header role="banner" class="page-main__header">
        <h2 class="title">Favorite Scenarios</h2>
      </header>
      <ul class="list card__list">
        <% data.scenarios.scenario.each do |s| %>
          <% if s.is_favorite %>
            <%= partial 'dashboard/partials/_dashboard-scenario-favorite-item', locals: {s:s} %>
          <% end %>
        <% end %>
      </ul>
    </div>
    <hr class="page-section__divider" />
    <div class="page-main__content">
      <header role="banner" class="page-main__header">
        <div class="page-main__header--left">
          <h2 class="title">All Scenarios</h2>
        </div>
        <div class="page-main__header--right">
          <ul class="list">
            <li class="item">
              <input type="search" placeholder="Look up a scenario">
            </li>
            <li class="item">
              <select>
                <option selected="selected" disabled="disabled">Select A Business</option>
              </select>
            </li>
          </ul>
        </div>
      </header>
      <table class="card-table">
        <thead class="card-table__header">
          <tr>
            <th class="card-item card-item--large">Scenario Title</th>
            <th class="card-item">Business</th>
            <th class="card-item">Status</th>
            <th class="card-item">Modified Last</th>
            <th class="card-item">Modules</th>
            <th class="card-item">Rules</th>
            <th class="card-item">Variations</th>
            <th class="card-item">Tests</th>
            <th class="card-item">Actions</th>
          </tr>
        </thead>
        <tbody class="card-table__body">
          <% data.scenarios.scenario.each_with_index do |s, i| %>
            <% if !s.is_favorite %>
              <%= partial 'dashboard/partials/_dashboard-scenario-table-item', locals: {s:s, i:i} %>
              <%= partial 'dashboard/partials/_dashboard-scenario-preview-modal', locals: {s:s, i:i} %>
              <%= partial 'dashboard/partials/_dashboard-scenario-delete-modal', locals: {s:s, i:i} %>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</section>
<%= partial 'dashboard/partials/_dashboard-scenario-create-modal' %>